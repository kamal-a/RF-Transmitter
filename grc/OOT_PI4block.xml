<?xml version="1.0"?>
<!--

    ##pi4-Encoder##

-->

<block>
        <name>PI4-Encoder</name>
        <key>block_pi4_encoder</key>
        <import>from gnuradio import blocks</import>
        <make>blocks.pi4_encoder($type.size*$vlen)</make>
        <sink> 
                <name>msg_in</name>
                <type>$type</type>
                <vlen>$vlen</vlen>
                
        </sink>
        <source> 
                <name>out0</name>
                <type>$type</type>
                <vlen>$vlen</vlen>
        </source>
        <source>
                <name>clear_input</name>
                <type>$type</type>
                <vlen>$vlen</vlen>
        </source>

</block> 
